FROM rust:latest

RUN cargo install cargo-watch
RUN update-ca-certificates

# Create appuser
ENV USER=api
ENV UID=10001

RUN adduser \
    --disabled-password \
    --gecos "" \
    --home "/nonexistent" \
    --shell "/sbin/nologin" \
    --no-create-home \
    --uid "${UID}" \
    "${USER}"


WORKDIR /app

COPY ./ .

ENV SQLX_OFFLINE true

VOLUME ["./api/src:/app/src:ro"]
CMD ["cargo", "watch", "-x", "run"]
